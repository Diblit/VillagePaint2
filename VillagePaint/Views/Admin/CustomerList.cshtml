                <form class="form-horizontal">
                    <div class="form-group">
                        <p class="p-custom-heading">New Client</p>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6">
                            <div class="">
                                <label for="" class="control-label fw600">Card Number: <span class="text-danger">*</span></label>
                                <input type="text" id="tbClientCardNrAdd" class="form-control input-sm" placeholder="" value="" onchange="" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="">
                                <label for="" class="control-label fw600">Company Name: </label>
                                <input type="text" id="tbClientCompanyNameAdd" class="form-control input-sm" placeholder="" value="" />
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-sm-6">
                            <div class="">
                                <label for="" class="control-label fw600">Name: <span class="text-danger">*</span></label>
                                <input type="text" id="tbClientNameAdd" class="form-control input-sm" placeholder="" value="" onchange="" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="">
                                <label for="" class="control-label fw600">Surname: </label>
                                <input type="text" id="tbClientSurnameAdd" class="form-control input-sm" placeholder="" value="" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-6">
                            <div class="">
                                <label for="" class="control-label fw600">Email: </label>
                                <input type="text" id="tbClientEmailAdd" class="form-control input-sm" placeholder="" value="" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="">
