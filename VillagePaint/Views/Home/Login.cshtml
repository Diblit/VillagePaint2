<header id="fh5co-header" class="fh5co-cover" role="banner" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <div class="display-t">
                    <div style="height:100px"></div>
                    <div class="display-tc animate-box" data-animate-effect="fadeIn" style="display:block !important">
                        <h1 style="font-family:  fantasy; font-size:60pt">Login</h1>
                        <div class="row">
                            <label class="col-md-4 col-xs-4" style="text-align:right"></label><input id="tbEmail" class="col-md-4 col-xs-4" type="text" placeholder="Email"/>
